// Fábio 06/06/25 Criar Usuário
model user {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  email String   @unique
  name  String
  age   Int
  ender String // novo campo
  num   Int    // novo campo
  cid   String // novo campo
  est   String // novo campo
  cel   String // novo campo
  createdAt DateTime @default(now())
}

